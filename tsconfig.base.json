{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@onyx/espresso": ["kitchen/espresso/src/index.ts"],
      "@onyx/ground-coffee": ["kitchen/ground-coffee/src/index.ts"],
      "@onyx/roasted-beans": ["kitchen/roasted-beans/src/index.ts"],
      "@onyx/tea-leaves": ["kitchen/tea-leaves/src/index.ts"],
      "@onyx/water": ["kitchen/water/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
